#cloud-config
apt_update: false
apt_upgrade: false
runcmd:
 - /usr/bin/wget -O /opt/get-app.sh https://raw.githubusercontent.com/vmssignite/ignite2019/controlcrash/get-app.sh
 - chmod +x /opt/get-app.sh
 - echo '#! /bin/sh -e' >/etc/rc.local
 - echo '/opt/get-app.sh >>/etc/rc.local'
 - echo exit 0>>/etc/rc.local
 - chmod +x /etc/rc.local
 - echo 'Running App'
 - nohup /opt/get-app.sh &
